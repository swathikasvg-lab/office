FLASK_SECRET_KEY=change-this-secret
NMS_SECRET_KEY=change-this-nms-secret

DB_USER=autointelli
DB_PASSWORD=autointelli123
DB_NAME=opsduty

# Local Docker default (set true when behind HTTPS)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax

# First-start admin seed password
ADMIN_PASSWORD=Admin@123
AUTO_BOOTSTRAP=1
CREATE_TEST_USERS=false
ITAM_DISCOVERY_POLL_SECONDS=30

# Optional: AWS cloud discovery (Phase 4)
# Use standard AWS credentials env vars or IAM role, and map accounts to customer_id.
# ITAM_AWS_ACCOUNTS_JSON example:
# [{"customer_id":1,"account_id":"123456789012","regions":["us-east-1"],"role_arn":"arn:aws:iam::123456789012:role/ReadOnlyRole"}]
ITAM_AWS_ACCOUNTS_JSON=
ITAM_AWS_REGIONS=us-east-1
ITAM_AWS_ACCOUNT_ID=
ITAM_AWS_ROLE_ARN=
ITAM_AWS_EXTERNAL_ID=
ITAM_AWS_PROFILE=
ITAM_AWS_CUSTOMER_ID=

# Optional: Azure cloud discovery (supports integration profiles + env fallback)
# ITAM_AZURE_SUBSCRIPTIONS_JSON example:
# [{"customer_id":1,"subscription_id":"00000000-0000-0000-0000-000000000000","tenant_id":"...","client_id":"...","client_secret":"..."}]
ITAM_AZURE_SUBSCRIPTIONS_JSON=
ITAM_AZURE_SUBSCRIPTION_ID=
ITAM_AZURE_TENANT_ID=
ITAM_AZURE_CLIENT_ID=
ITAM_AZURE_CLIENT_SECRET=
ITAM_AZURE_CUSTOMER_ID=

# Optional: GCP cloud discovery (supports integration profiles + env fallback)
# ITAM_GCP_PROJECTS_JSON example:
# [{"customer_id":1,"project_id":"my-prod-project","credentials_file":"/run/secrets/gcp-sa.json"}]
ITAM_GCP_PROJECTS_JSON=
ITAM_GCP_PROJECT_ID=
ITAM_GCP_CREDENTIALS_JSON=
ITAM_GCP_CREDENTIALS_FILE=
ITAM_GCP_CUSTOMER_ID=

# Optional: OT seed discovery JSON payload
# Example:
# [{"customer_id":1,"asset_name":"PLC-01","primary_ip":"10.10.1.11","protocol":"modbus","location":"plant-a"}]
ITAM_OT_ASSETS_JSON=
ITAM_OT_MODBUS_ENDPOINTS_JSON=
ITAM_OT_BACNET_ENDPOINTS_JSON=
ITAM_OT_OPCUA_ENDPOINTS_JSON=

# Optional superadmin login bypass
SUPERADMIN_USERNAME=
SUPERADMIN_PASSWORD=

# Grafana URL that browser can access
GRAFANA_BASE_URL=http://localhost:3000

# Optional metrics endpoints (used by reports/dashboards)
PROMETHEUS_URL=http://prometheus:9090
INFLUXDB_URL=http://influxdb:8086/query
INFLUXDB_DB=autointelli
FORTIGATE_INFLUXDB_URL=http://influxdb:8086/query
FORTIGATE_INFLUXDB_DB=fortigate
DESKTOP_INFLUXDB_URL=http://influxdb:8086/query
DESKTOP_INFLUXDB_DB=end_user_monitoring
